generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CourseType {
  AUTONOMOUS
  INDIVIDUAL
  GROUP
}

model Course {
  id          String    @id @default(uuid())
  organizer   String    // will be a user id
  instructor  String    // will be a user id
  type        CourseType
  description String?
  location    String?
  frequency   String?
  times       String?
  cost        Decimal   @default(0)
}
